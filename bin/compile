#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

set -o errexit
set -o pipefail
set -o nounset
unset GIT_DIR

function topic() {
  echo "-----> $*..."
}

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

BUILD_DIR=${1:-}
CACHE_DIR=${2:-}
ENV_DIR=${3:-}

BIN_DIR=$BUILD_DIR/.chromedriver/bin
mkdir -p $BIN_DIR

ZIP_URL="https://we-misce.s3.amazonaws.com/rpms/heroku-chromedriver-linux64-115.0.5763.0.zip"
ZIP_LOCATION="/tmp/chromedriver.zip"
curl --silent --show-error --fail --retry 3 --retry-connrefused --connect-timeout 10 -o "${ZIP_LOCATION}" "${ZIP_URL}"
unzip -j -o $ZIP_LOCATION -d $BIN_DIR
rm -f $ZIP_LOCATION
indent "Downloaded"

topic "Creating chromedriver export scripts"
mkdir -p $BUILD_DIR/.profile.d
echo "export PATH=\$PATH:\$HOME/.chromedriver/bin" >> $BUILD_DIR/.profile.d/chromedriver.sh
indent "Created"
